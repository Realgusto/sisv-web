generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Purchase {
  id            String   @id @default(cuid())
  date          DateTime
  delivery_date DateTime
  supplier      String?
  product       String
  quantity      Int
  value         Float?
  department    String?
  observations  String?
  status        Status
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
}

enum Status {
  Solicitada
  Andamento
  Aprovada
  Recebida
  Devolvida
  Cancelada
}
